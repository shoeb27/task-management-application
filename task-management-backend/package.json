{
  "name": "task-management-backend",
  "version": "0.0.1",
  "description": "Task management system with express, typeorm, typescript and node.",
  "type": "commonjs",
  "scripts": {
    "watch": "tsc -w",
    "dev": "nodemon build/index.js",
    "start:dev": "concurrently \"tsc -w\" \"nodemon build/index.js\"",
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": " npm run typeorm migration:generate ./src/migration/timestamp_ -- -d ./src/data-source.ts",
    "migration:run": " npm run typeorm migration:run -- -d ./src/data-source.ts"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.1.0",
    "nodemon": "^3.1.4",
    "ts-node": "10.9.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@mapbox/node-pre-gyp": "^1.0.11",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "morgan": "^1.10.0",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.3.20"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.7.0"
  }
}
